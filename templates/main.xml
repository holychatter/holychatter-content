<?xml version="1.0" encoding="UTF-8" ?>
<messages>
  <message id="main">
    <div class="hc-centered">
      ${top-vertical-space}
      ${image-logo}
      <span style="display: block; height: 40px;"></span>
      <p style="text-align: center;">
        ${sub-title}
        <div style="text-align: center;">${bible-refs}</div>
      </p>
      <span style="display: block; height: 20px;"></span>
      <div style="text-align: center;">${buttons-position}</div>
      <span style="display: block; height: 50px;"></span>
      <div style="text-align: center;">${change-language}</div>
    </div>
  </message>
  <message id="main.vertical-buttons">
    ${chat-button}
    <span style="display: block; height: 25px;"></span>
    ${content-button}
  </message>
  <message id="main.horizontal-buttons">
    ${chat-button}
    <span style="padding: 15px;"></span>
    ${content-button}
    <span style="display: block; height: 20px;"></span>
  </message>
</messages>

