<?xml version="1.0" encoding="utf-8"?>
<factsRoot>
  <fact id="aimer-dieu"/>
  <fact id="aimer-son-prochain"/>
  <fact id="aller-au-ciel">
    <preconditionFacts>
      <preconditionSet>aimer-dieu, aimer-son-prochain, être-chrétien</preconditionSet>
    </preconditionFacts>
    <continuationTexts>
      <continuation facts="debut-de-la-conversation" text="Je veux dialoguer avec vous"/>
      <continuation text="Continuez la discussion"/>
    </continuationTexts>
  </fact>
  <fact id="debut-de-la-conversation"/>
  <fact id="dire-bonjour">
    <continuationTexts>
      <continuation text="Qui êtes-vous ?"/>
    </continuationTexts>
  </fact>
  <fact id="ne-pas-être-chrétien">
    <triggers>
      <trigger>Je ne suis pas chrétien.</trigger>
    </triggers>
  </fact>
  <fact id="pourquoi-le-message-chrétien-est-vrai"/>
  <fact id="quiz">
    <continuationTexts>
      <continuation facts="replanifier-pour-quiz" text="Repose-moi ta question"/>
      <continuation facts="${quiz-nombre-de-questions}=0" text="Jouer"/>
      <continuation facts="${quiz-nombre-de-questions}=3" text="Voir le résultat"/>
      <continuation text="Posez moi la `${quiz-nombre-de-questions}+1`e question sur 3."/>
    </continuationTexts>
  </fact>
  <fact id="quiz-fini-de-poser-toutes-les-questions">
    <preconditionFacts>
      <preconditionSet>${quiz-nombre-de-questions}=3</preconditionSet>
    </preconditionFacts>
  </fact>
  <fact id="simple-comme-bonjour-et-si-on-agissait"/>
  <fact id="simple-comme-bonjour-et-si-on-changeait-de-regard"/>
  <fact id="simple-comme-bonjour-et-si-on-comprenait"/>
  <fact id="simple-comme-bonjour-passer-a-l-action"/>
  <fact id="simple-comme-bonjour-proposer-le-livret"/>
  <fact id="être-chrétien">
    <triggers>
      <trigger>Je suis chrétien.</trigger>
    </triggers>
    <preconditionFacts>
      <preconditionSet>pourquoi-le-message-chrétien-est-vrai</preconditionSet>
    </preconditionFacts>
  </fact>
</factsRoot>
